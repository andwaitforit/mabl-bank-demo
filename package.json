{
  "name": "banking-app",
  "version": "0.1.0",
  "private": true,
  "homepage": "http://jeffdelara.github.io/banking-app",
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "NODE_OPTIONS=--openssl-legacy-provider react-scripts start",
    "server": "node server.js",
    "build": "NODE_OPTIONS=--openssl-legacy-provider react-scripts build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "autoheal": "sh scripts/demo/demo-auto-healing.sh",
    "test:playwright": "npx playwright test",
    "test:playwright:ui": "npx playwright test --ui",
    "test:donation": "npx playwright test tests/donation.spec.js --reporter=list",
    "test:api": "node scripts/testing/test-api.js",
    "test:codex-mcp": "sh scripts/testing/test-codex-mcp.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:pull": "docker-compose -f docker-compose.ghcr.yml pull",
    "docker:ghcr": "docker-compose -f docker-compose.ghcr.yml up -d",
    "docker:ghcr:down": "docker-compose -f docker-compose.ghcr.yml down",
    "add-broken-feature": "sh scripts/demo/add-broken-feature.sh",
    "fix-feature": "sh scripts/demo/fix-feature.sh",
    "reset-feature": "sh scripts/demo/reset-feature.sh",
    "reset-and-commit": "sh scripts/deployment/reset-and-commit.sh",
    "commit-and-deploy": "sh scripts/deployment/commit-and-deploy.sh",
    "demo:cycle": "sh scripts/demo/demo-cycle.sh",
    "demo:add-and-deploy": "npm run add-broken-feature && sh scripts/deployment/commit-and-deploy.sh 'Add donation feature for demo cycle'",
    "demo:reset-and-deploy": "npm run reset-feature && sh scripts/deployment/reset-and-commit.sh",
    "demo:full": "npm run add-broken-feature && npm run test:donation || true && npm run fix-feature && npm run test:donation && npm run reset-feature",
    "help": "sh scripts/utils/show-commands.sh"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "^3.2.3"
  }
}
